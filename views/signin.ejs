<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Sign In - Campus Incident Management System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #eef2f7;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .card {
            border: none;
            border-radius: 20px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
            padding: 40px;
            background: #fff;
        }

        .form-control {
            border-radius: 30px;
            padding: 15px;
        }

        .btn-primary {
            border-radius: 30px;
            padding: 15px;
            font-size: 16px;
            font-weight: bold;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .form-header {
            margin-bottom: 30px;
            text-align: center;
        }

        .form-header h2 {
            font-size: 2.5rem;
            font-weight: 700;
            color: #333;
        }

        .form-header p {
            color: #888;
            font-size: 1rem;
        }

        .small-text {
            text-align: center;
            margin-top: 20px;
        }

        .small-text a {
            color: #007bff;
            text-decoration: none;
        }

        .small-text a:hover {
            text-decoration: underline;
        }
    </style>
</head>

<body>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="form-header">
                        <h2>Sign In</h2>
                        <p>Access your account and manage incidents</p>
                    </div>
                    <form id="signin-form">
                        <div class="mb-3">
                            <input type="email" class="form-control" id="email" name="email" placeholder="Email Address"
                                required>
                        </div>
                        <div class="mb-3">
                            <input type="password" class="form-control" id="password" name="password"
                                placeholder="Password" required>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Sign In</button>
                        </div>
                    </form>
                    <div class="small-text mt-3">
                        <p>Don't have an account? <a href="/signup">Sign Up</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <script>
        const baseURL = 'http://localhost:3000';

        const handleSignIn = async (email, password) => {
            try {
            const response = await fetch(`${baseURL}/api/signin`, {
                method: 'POST',
                credentials: 'include', // Ensures cookies (including refreshToken) are sent with requests
                headers: {
                'Content-Type': 'application/json',
                },
                body: JSON.stringify({ email, password }),
            });

            // Check if response is OK
            if (response.ok) {
                const user = await response.json();
                
                if (user.user.role === 'staff') {
                window.location.href = '/dashboards/staff_dashboard';
                } else {
                window.location.href = '/dashboards/student_dashboard';
                }
            } else {
                const contentType = response.headers.get('content-type');

                // Check if the content type is JSON
                if (contentType && contentType.includes('application/json')) {
                const error = await response.json();
                throw new Error(error.message);
                } else {
                const errorText = await response.text();  // Capture raw text response for better debugging
                console.log("Raw response: ", errorText);  // Log the full raw response
                
                throw new Error('Unexpected response format');
                }
            }
            } catch (error) {
            console.error('Sign-in error:', error);
            alert('Sign-in failed: ' + error.message);
            }
        };

        // Handle form submission
        document.getElementById('signin-form').addEventListener('submit', async (event) => {
            event.preventDefault(); // Prevent the default form submission
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;
            await handleSignIn(email, password); // Call the handleSignIn function
        });
    </script>

</body>

</html>
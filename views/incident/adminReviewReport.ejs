<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Incident Report Review</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
        }
        .container {
            margin-top: 50px;
        }
        h2 {
            margin-bottom: 30px;
            font-weight: bold;
        }
        .table {
            background-color: #ffffff;
            border-radius: 0.5rem;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        th {
            background-color: #007bff;
            color: white;
            text-align: center;
        }
        td {
            text-align: center;
        }
        .evidence-link {
            color: #007bff;
            text-decoration: none;
        }
        .evidence-link:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Incident Reports Review</h2>
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Date</th>
                    <th>Location</th>
                    <th>Category</th>
                    <th>Reporter</th> <!-- Added this line -->
                    <th>Evidence</th>
                </tr>
            </thead>
            <tbody>
                <% incidentReports.forEach(report => { %>
                    <tr>
                        <td><%= report.title %></td>
                        <td><%= report.description %></td>
                        <td><%= report.date %></td>
                        <td><%= report.location %></td>
                        <td><%= report.category %></td>
                        <td><%= report.reporter_name %></td> <!-- Added this line -->
                        <td>
                            <% const evidenceFiles = JSON.parse(report.evidence); %>
                            <% evidenceFiles.forEach(file => { %>
                                <a href="/<%= file %>" target="_blank" class="evidence-link">View Evidence</a><br>
                            <% }) %>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
